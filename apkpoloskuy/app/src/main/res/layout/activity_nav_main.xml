<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="411dp"
            android:layout_height="65dp"
            android:background="@color/charcoal"
            tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Home POLOSKUY"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    />


        </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:layout_marginBottom="56dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <ImageView
                            android:layout_width="411dp"
                            android:layout_height="200dp"
                            android:src="@drawable/carashboard" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/mslight"
                            android:gravity="center_horizontal"
                            android:text="Selamat datang di aplikasi POLOSKUY"
                            android:textAlignment="center"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="110dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:outlineAmbientShadowColor="@color/black"
                            app:cardCornerRadius="10dp">

                                <ImageView
                                    android:layout_width="250dp"
                                    android:layout_height="130dp"
                                    android:layout_marginLeft="-30dp"
                                    android:src="@drawable/banneerpertama" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="222dp"
                            android:layout_marginTop="-100dp"
                            android:layout_marginRight="25dp"
                            android:fontFamily="@font/msmedium"
                            android:gravity="start"
                            android:text="Pilih item baru semaumu dengan gaya favoritmu"
                            android:textAlignment="viewStart"
                            android:textSize="18sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="277dp"
                            android:layout_height="187dp"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="50dp"
                            app:cardCornerRadius="20dp">

                                <ImageView
                                    android:layout_width="350dp"
                                    android:layout_height="270dp"
                                    android:layout_marginTop="-50dp"
                                    android:src="@drawable/bannerkedua" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="-140dp"
                            android:fontFamily="@font/msmedium"
                            android:gravity="end"
                            android:text="Pilih OOTD style terbaru dan kreasikan sesukamu"
                            android:textAlignment="textEnd" />


                </LinearLayout>
        </ScrollView>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/menu_bawah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:foregroundGravity="bottom"
            android:layout_marginTop="547dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_navigation" />






</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailBarangActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="65dp"
        android:background="@color/charcoal"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/arrowBackc"
                android:layout_width="12.79dp"
                android:layout_height="20.12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_back" />

            <EditText
                android:id="@+id/cari"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="18dp"
                android:background="@drawable/edttv"
                android:hint="Cari disini" />

            <ImageButton
                android:id="@+id/imgb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_baseline_shopping_cart_24" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/viewFoto"
                android:src="@drawable/armuh"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="246dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="53dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="345dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="594dp" />

    <ImageView
        android:id="@+id/img_kaos"
        android:layout_width="413dp"
        android:layout_height="171dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/img_kaos" />

    <TextView
        android:id="@+id/txt_harga"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:text="Rp. 45.000"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <TextView
        android:id="@+id/txt_namaproduk"
        android:layout_width="291dp"
        android:layout_height="44dp"
        android:layout_marginTop="52dp"
        android:text="Kaos hitam Polos Unisex  Pria Wanita All Size "
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        tools:ignonore="MissingConstraint" />

    <TextView
        android:id="@+id/txt_detailproduk"
        android:layout_width="132dp"
        android:layout_height="29dp"
        android:layout_marginTop="108dp"
        android:text="Detail Produk"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/txt_harga" />

    <TextView
        android:id="@+id/txt_ketdetail"
        android:layout_width="293dp"
        android:layout_height="79dp"
        android:layout_marginTop="152dp"
        android:text="Kaos hitam Polos Unisex  Pria Wanita All Size Tersedia dalam berbagai ukuran, Bahannya yang lembut membuat kaos ini sering menjadi incaran banyak orang"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <Button
        android:id="@+id/btn_chatpenjual"
        android:layout_width="135dp"
        android:layout_height="39dp"
        android:layout_marginBottom="4dp"
        android:text="Chat Penjual"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5" />

    <Button
        android:id="@+id/btn_keranjang"
        android:layout_width="150dp"
        android:layout_height="39dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#0BB91C"
        android:text="+Keranjang"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline6" />

    <View
        android:id="@+id/view_line"
        android:layout_width="411dp"
        android:layout_height="1dp"
        android:layout_marginTop="96dp"
        android:background="#C4C4C4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <ImageButton
        android:id="@+id/img_favorit"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:background="@drawable/favorit"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/cardPesanan"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:cardCornerRadius="9dp"
        android:background="#B0BFCA"
        >

        <RelativeLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/RVimgPesanan"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="321dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/iccamera_alt"
                android:text="1" />

            <TextView
                android:id="@+id/RVnamaPesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="98dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="142dp"
                android:layout_marginRight="142dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="sans-serif-medium"
                android:text="Nama Produk"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/RVhargaPesanan"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="336dp"
                android:layout_marginLeft="336dp"
                android:layout_marginTop="57dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="17dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="end"
                android:text="120000"
                android:textAlignment="viewEnd"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/RVjmlPesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="377dp"
                android:layout_marginLeft="377dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:gravity="end"
                android:text="x 1"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/RVimgPesanan"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="93dp"
                android:layout_marginEnd="282dp"
                android:layout_marginRight="282dp"
                android:layout_marginBottom="-23dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Status Pengiriman :"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/RV_StatusPesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="140dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="87dp"
                android:layout_marginEnd="132dp"
                android:layout_marginRight="132dp"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text="Menunggu Konfirmasi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_sampai"
                android:layout_width="73dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="332dp"
                android:layout_marginLeft="332dp"
                android:layout_marginTop="81dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0"
                android:backgroundTint="@color/black"
                android:text="SELESAI"
                android:textSize="10dp" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
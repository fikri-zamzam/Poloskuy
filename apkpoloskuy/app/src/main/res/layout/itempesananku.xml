<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/cardPesanan"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:cardCornerRadius="9dp"
        android:background="#B0BFCA"
        >

        <RelativeLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/RVimgPesanan"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="321dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/iccamera_alt"
                android:text="1" />

            <TextView
                android:id="@+id/RVnamaPesanan"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="111dp"
                android:layout_marginLeft="111dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="106dp"
                android:layout_marginRight="106dp"
                android:layout_marginBottom="0dp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-medium"
                android:text="Nama Produk"
                android:textSize="18sp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/RVhargaPesanan"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="282dp"
                android:layout_marginLeft="282dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="17dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="end"
                android:text="1200000000"
                android:textAlignment="viewEnd"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/RVjmlPesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="377dp"
                android:layout_marginLeft="377dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:gravity="end"
                android:text="x 1"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_alignBottom="@+id/RVimgPesanan"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="323dp"
                android:layout_marginRight="323dp"
                android:layout_marginBottom="-21dp"
                android:layout_weight="0.5"
                android:gravity="left"
                android:text="Status :"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/RV_StatusPesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="123dp"
                android:layout_marginLeft="123dp"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="149dp"
                android:layout_marginRight="149dp"
                android:layout_marginBottom="79dp"
                android:gravity="center"
                android:text="Menunggu Konfirmasi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_sampai"
                android:layout_width="124dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="301dp"
                android:layout_marginLeft="301dp"
                android:layout_marginTop="81dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0"
                android:backgroundTint="@color/black"
                android:gravity="center_horizontal"
                android:text="SAMPAI"
                android:textAlignment="center"
                android:textSize="9dp" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KonfirmasiPesananActivity">

    // membuat toolbar dan isinya
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="55dp"
        android:background="@color/charcoal"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txt_navconfirm"
            android:layout_width="254dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Konfirmasi Pesanan Saya"
            android:textColor="@color/white"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="12dp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apakah Anda Telah Menerima Pesanan?"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="21dp"
            android:textAlignment="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_penilaian"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="Penilaian Pesanan"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/add_ket"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="text"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:hint="Masukkan Keterangan"
            android:textAlignment="center"
            android:textColor="@color/charcoal"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintVertical_bias="0.51"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_tidak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TIDAK"
                android:textColor="@color/black"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="@color/white"/>

            <Button
                android:id="@+id/btn_ya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="YA"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="@color/blue"/>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>